---
import HeaderLink from "./HeaderLink.astro";
---

<header class="header">
  <img
    src="https://github.com/1665800095fghk/images/blob/main/logo_.png?raw=true"
    width="48"
    style="margin-right: 10px;border-radius: 10px;"
    alt=""
  />
  <nav>
    <div class="left">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <!-- <HeaderLink href="/diary">Diary</HeaderLink> -->
      <HeaderLink href="/tags">Tag</HeaderLink>
    </div>
    <div class="hr_line"></div>
    <div class="right">
      <HeaderLink
        href="https://space.bilibili.com/170807657?spm_id_from=333.1007.0.0"
        target="_blank"
      >
        Bilibili
      </HeaderLink>
      <HeaderLink href="https://github.com/1665800095fghk" target="_blank">
        Github
      </HeaderLink>
    </div>
  </nav>
</header>
<style>
  .header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  nav {
    height: 64px;
  }
  header img {
    height: 48px;
    margin: 8px 0;
  }
  nav a {
    margin: 10px 10px 10px 0  ;
  }
  .hr_line {
    width: 3px;
    height: 32px;
    margin: 8px 10px 16px 0;
    background: #555;
  }
</style>
